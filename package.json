{
  "name": "bigglesworth-api",
  "version": "0.0.1",
  "description": "Mr Bigglesworth helps you find World of Warcraft information on the go",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Ali Zahid",
    "email": "ali.zahid@live.com",
    "url": "https://designplox.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alizahid/bigglesworth-api"
  },
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec 'node -r dotenv/config' index.js",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo",
    "precommit": "lint-staged",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "dependencies": {
    "cors": "^2.8.4",
    "fastify": "^1.1.1",
    "mongoose": "^5.0.11",
    "node-fetch": "^2.1.2",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "dotenv": "^5.0.1",
    "eslint": "^4.5.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.17.2",
    "nyc": "^11.1.0",
    "prettier": "^1.6.1",
    "xo": "latest"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "engines": {
    "node": "9.9.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --no-semi --trailing-comma none",
      "git add"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none",
          "semi": false
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true,
    "semicolon": false
  }
}
